<div class='book-main'>
  <%= render "books/side_bar" %>
  <div class='book-main-contents'>
   <%=link_to '↩', root_path, class:"back-btn" %>
    <div class='book-wrap'>
      <div class='book-header'>
        <h1 class='book-header-text'>
         <%= @book.name%>
        </h1>
      </div>
   
      <div class="book-group">
      <div class="book-image-head">
      <%= image_tag @book.image.variant(resize: '500x500') ,class:"book-image" if @book.image.attached?  %>
      </div>
      </div>

      <div class="book-group">
      <div class="book-info">
      <%= "著者:#{@book.author}"%>
      </div>
      </div>

      <div class="book-group">
      <div class="book-info">
      <%= "ジャンル:#{@book.category.name}" unless @book.category_id == 1%>
      </div>
      </div>

      <div class="book-group">
      <div class="book-info">
      <%= "一言:#{@book.information}" if @book.information.present? %>
      </div>
      </div>

      <div class="book-group">
      <div class="book-info">
      <%= "状態:#{@book.status.name}" %><span class="book-date"> <%=@book.date%></span>
      </div>
      </div>
  




      <div class="user-books">
      <%=render partial: "books/book", collection: @books %>
      </div>
      <div class="books-wood"></div>
      
    </div>
</div>


