<div class='book-main'>
  <%= render "books/side_bar" %>
  <div class='book-main-contents'>
   <%=link_to '←', root_path, class:"back-btn" %>
    <div class='book-wrap'>
      <div class='book-header'>
        <h1 class='book-header-text'>
         <%= @book.name%>
        </h1>
      </div>

      <div class="book-group">
      <div class="user-text">
      <%= "著者:#{@book.author}"%>
      </div>
      </div>

      <div class="book-group">
      <div class="user-text">
      <%= "カテゴリ:#{@book.category.name}"%>
      </div>
      </div>

      <div class="book-group">
      <div class="user-text">
      <%= "一言:#{@book.information}"%>
      </div>
      </div>

      <div class="book-group">
      <div class="user-text">
      <%= "状態:#{@book.status.name}"%>
      </div>
      </div>


      <div class="user-books">
      <%=render partial: "books/book", collection: @books %>
      </div>
      
    </div>
</div>
