<div class='form-main'>
  <%= render "books/side_bar" %>

<%= form_with model: @book,  class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      新しい書籍情報を入力
    </h1>
  </div>

  <%= render "shared/error_messages", model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">タイトル</label>
    </div>
    <%= f.text_area :name, class:"input-default", id:"nickname", placeholder:"例) 本屋太郎", maxlength:"40" %>
  </div>

  <div class='register-btn'>
    <%= f.submit "書籍登録" ,class:"register-red-btn" %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
</div>
<% end %>
</div>

