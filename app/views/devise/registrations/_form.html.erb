<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<%=link_to '←', root_path, class:"back-btn" %>
<div class='form-wrap'>
  <div class='form-header'>
   <% unless user_signed_in?%>
    <h1 class='form-header-text'>
      ユーザー新規登録
    </h1>
   <% else %>
    <h1 class='form-header-text'>
      ユーザープロフィール編集
    </h1>
   <% end %>
  </div>
 

  <%= render "shared/error_messages", model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
    </div>
    <%= f.text_area :name, class:"input-default", id:"nickname", placeholder:"例) 本屋太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <% unless user_signed_in?%>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
    <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"register-red-btn" %>
  </div>
  <% else %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Profile</label>
    </div>
    <%= f.text_area :profile, class:"profile-default", maxlength:"40" %>
  </div>



  <div class="book-group">
    <div class='book-text-wrap'>
      <label class="book-text">Icon</label>
    </div>
    <label>
      <div class="filelabel" id="image-list">
      </div>
    <%= f.file_field :image, class:"user-image", id:"user-image" %>
    </label>
    
    </div>

  <div class="register-btn">
    <%= f.submit "情報更新",class:"register-red-btn"  %>
  </div>
  <% end %>
</div>
<% end %>


